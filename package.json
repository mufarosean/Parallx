{
  "name": "parallx",
  "version": "0.1.0",
  "description": "A persistent, configurable workbench for organizing, displaying, and restoring application layouts entirely from data.",
  "private": true,
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "build": "tsc --noEmit && node scripts/build.mjs",
    "build:renderer": "node scripts/build.mjs",
    "build:watch": "tsc --watch",
    "start": "node scripts/build.mjs && electron .",
    "dev": "node scripts/build.mjs && electron .",
    "rebuild": "electron-rebuild",
    "postinstall": "electron-rebuild",
    "test:e2e": "npx playwright test",
    "test:e2e:headed": "npx playwright test --headed"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.3",
    "@playwright/test": "^1.58.2",
    "electron": "^40.2.1",
    "esbuild": "^0.27.3",
    "playwright": "^1.58.2",
    "typescript": "^5.5.0"
  },
  "dependencies": {
    "@tiptap/core": "^3.19.0",
    "@tiptap/extension-color": "^3.19.0",
    "@tiptap/extension-highlight": "^3.19.0",
    "@tiptap/extension-image": "^3.19.0",
    "@tiptap/extension-link": "^3.19.0",
    "@tiptap/extension-placeholder": "^3.19.0",
    "@tiptap/extension-task-item": "^3.19.0",
    "@tiptap/extension-task-list": "^3.19.0",
    "@tiptap/extension-text-style": "^3.19.0",
    "@tiptap/extension-underline": "^3.19.0",
    "@tiptap/pm": "^3.19.0",
    "@tiptap/starter-kit": "^3.19.0",
    "@tiptap/suggestion": "^3.19.0",
    "adm-zip": "^0.5.16",
    "better-sqlite3": "^12.6.2",
    "tiptap-extension-global-drag-handle": "^0.1.18"
  }
}
